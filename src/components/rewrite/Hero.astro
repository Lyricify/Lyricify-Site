---
import type {Props} from '@astrojs/starlight/props';

// Import original component
import Default from '@astrojs/starlight/components/Hero.astro';

// Import custom components
import GlowHero from '@components/GlowHero.astro';

// Check if it is on Home Page
const isHomepage =
    Astro.props.slug === '' || Astro.props.slug === Astro.props.locale;
---

{isHomepage ? <GlowHero {...Astro.props} /> : <Default {...Astro.props} />}
