---
interface Props {
    mobile?: boolean;
}

const {mobile = false} = Astro.props;
---
<div class={mobile ? 'mobile container' : 'container'}>

    <slot/>

</div>

<style>

    .container {
        display: flex;
        display: -webkit-flex;
        justify-content: space-between;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .container > div {
        flex: 1;
    }

    .mobile {
        flex-wrap: nowrap;
    }

    @media (width < 50rem) {
        .mobile {
            flex-direction: column;
        }
    }

</style>